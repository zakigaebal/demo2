<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.demo.dao.CommentMapper">

    <select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM COMMENT
    </select>

<!--    <select id="commentList" resultType="com.example.demo.domain.CommentVO">-->
<!--        SELECT-->
<!--            *-->
<!--        FROM COMMENT-->
<!--    </select>-->

    <!-- comment List -->
    <select id="commentList" parameterType="int" resultType="com.example.demo.domain.CommentVO">
        SELECT cno, bno, reply_idx as replyIdx, content, writer
        FROM COMMENT
        where bno =#{bno}
        order by reg_date asc, reply_idx asc
    </select>


    <insert id="commentInsert" parameterType="com.example.demo.domain.CommentVO">
        INSERT INTO
            COMMENT (bno, reply_idx, content, writer, reg_date)
        VALUES(#{bno},#{replyIdx},#{content},#{writer},now())
    </insert>

    <update id="commentUpdate" parameterType="com.example.demo.domain.CommentVO">
        UPDATE COMMENT
        SET
            CONTENT = #{content}
        WHERE CNO = #{cno}
    </update>

    <delete id="commentDelete" parameterType="int">
        DELETE FROM COMMENT WHERE CNO = #{cno}
    </delete>
</mapper>
